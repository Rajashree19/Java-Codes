package demo1;
import java.util.Scanner;

public class SwitchCase {
	
	public static void main(String[] args) {
		int choice;
		Scanner sc=new Scanner(System.in);
		System.out.println("Pick one: 1. Hi\t2. Hey\t 3.Hello");
		choice=sc.nextInt();					//User Choice
		
		switch(choice) {                          //Implementation
		
		case 1: System.out.println("Hi User");
		break;
		
		case 2: System.out.println("Hey User");
		break;

		case 3: System.out.println("Hello User");
		break;

		default:System.out.println("Invalid Choice");
		}

	}

}





//OUTPUT SCREEN
Pick one: 1. Hi	2. Hey	 3.Hello
3
Hello User
